
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employee List</h2>

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="card">
            <div class="card-body">
                <table class="table" id="datatable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Employee ID</th>
                            <th>First Name</th>
                            <th>Middle Name</th>
                            <th>Last Name</th>
                            <th>Mobile Number</th>
                            <th>Email</th>
                            <th>Date Created</th>
                            <th>Date Modified</th>
                        </tr>
                    </thead>
              
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {

            $.fn.toggleLoadingScreen();

             $.ajax({
                 url: '@Url.Action("EmployeeList", "Employee")',
                 method: "POST",
                 datatype: "json",
                 success: function (data) {
                     const employeeData = JSON.parse(data.Employees);
                     if (data.StatusCode === 200) {
                         $('#datatable').DataTable({
                             data: employeeData.data,
                             columns: [
                                 { data: 'ID' },
                                 { data: 'EmployeeID' },
                                 { data: 'FirstName' },
                                 { data: 'MiddleName' },
                                 { data: 'LastName' },
                                 { data: 'MobileNumber' },
                                 { data: 'Email' },
                                 { data: 'DateCreated' },
                                 { data: 'DateModified' },
                             ]
                         });

                     } else if (data.StatusCode === 400){
                         alert(data.Message);
                     } else {
                         alert("Internal Error");
                     }

                     $.fn.toggleLoadingScreen();
                 },
                 error: function (data) {
                     alert("Internal Error");
                     $.fn.toggleLoadingScreen();
                 }
             });
    });
    </script>
}


