<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/DataTables/datatables.min.css" rel="stylesheet" />
    <link href="~/Content/Custom/custom-style.css" rel="stylesheet" />
    <link href="~/Content/fonts.css" rel="stylesheet" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>

    <div id="overlay" class="hide"></div>
    <div id="loading_spinner_bg" class="hide">
        <div class="spinner-border text-primary" role="status" id="loading_spinner">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <div class="side-nav shadow" id="side-nav">
        <div class="d-flex flex-column h-100">
            <div>
                <div class="nav-tab mb-3 nav-header poppins-bold d-flex px-3" style="padding-left: 0.2rem; padding-right: 0.2rem; padding-top: 1rem;">
                    <p>HRIS</p>
                    <i class="bi bi-list ms-auto me-2" id="hb-btn" style="cursor: pointer;"></i>
                </div>

                <div class="nav-tab d-flex mb-4 ps-4 pe-3">
                    <i class="bi bi-house-door me-3"></i>
                    <p class="m-0">Home</p>
                </div>

                <div class="nav-tab d-flex mb-4 ps-4 pe-3">
                    <i class="bi bi-person me-3"></i>
                    <p class="m-0">User</p>
                </div>

                <div class="nav-tab d-flex mb-4 ps-4 pe-3">
                    <i class="bi bi-people me-3"></i>
                    <a class="m-0" href="@Url.Action("Index", "Employee")">Employee</a>
                </div>

                <div class="nav-tab d-flex mb-4 ps-4 pe-3">
                    <i class="bi bi-shield-lock me-3"></i>
                    <p class="m-0">Acces Rights</p>
                </div>
            </div>

            <div class="nav-tab nav-profile-tab mt-auto px-3 py-3">
                <div class="d-flex align-items-center">
                    <img src="~/Content/images/user-profile/placeholder-profile.jpg" alt="test" class="rounded-circle profile-pic me-3">
                    <div class="d-flex flex-column">
                        <p>Username</p>
                        <p>Fullname</p>
                    </div>
                    <i class="bi bi-box-arrow-left ms-auto me-2" style="font-size: 1.5em;"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Content/DataTables/datatables.min.js"></script>

    <script>
        //User defined JQuery functions
        $.fn.toggleLoadingScreen = function () {
            $('#overlay').toggleClass('hide');
            $('#loading_spinner_bg').toggleClass('hide');
        };

        $(document).ready(function () {

            var initialLoad = true;

            $("#hb-btn").on("click", function () {
                var sideBar = $("#side-nav");

                if (sideBar.hasClass("side-nav-open") || initialLoad == true) {
                    sideBar.addClass("side-nav-close");
                    sideBar.removeClass("side-nav-open");
                    initialLoad = false;
                } else {
                    sideBar.addClass("side-nav-open");
                    sideBar.removeClass("side-nav-close");
                }
            });
        });

    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
